    "mime-types": "^2.1.35",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "@types/handlebars": "^4.0.40",
    "@types/ip": "^1.1.3",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^22.10.1",
    "concurrently": "^9.1.0",
    "nodemon": "^3.1.7",
